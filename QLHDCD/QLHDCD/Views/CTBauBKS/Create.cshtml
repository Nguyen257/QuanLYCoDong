                @Html.ValidationMessageFor(model => model.MANGDUOCBAU)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MANGDIBAU, "Tên người đi bầu", new { @class = "control-label col-lg-2" })
