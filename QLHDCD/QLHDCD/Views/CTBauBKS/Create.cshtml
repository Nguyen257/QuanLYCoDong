                @Html.DropDownList("MADH", String.Empty)
                @Html.ValidationMessageFor(model => model.MADH)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MANGDUOCBAU, "Tên người được bầu", new { @class = "control-label col-lg-2" })
