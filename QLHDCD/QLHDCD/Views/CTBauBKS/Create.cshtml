@model QLHDCD.Models.CT_BAUBKS

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Bầu cổ đông</h2>
@{
    if (ViewBag.check != null)
    {
        if (ViewBag.check == 1)
        {
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title">Thông báo</h3>
                </div>
                <div class="panel-body">
                    @ViewBag.checkString
                </div>
            </div>
        }
        else
        {
            <div class="panel panel-danger">
                <div class="panel-heading">
                    <h3 class="panel-title">Thông báo</h3>
                </div>
                <div class="panel-body">
                    @ViewBag.CheckString
                </div>
            </div>
        }
    }
}
@using (Html.BeginForm("Insert","CTBauBKS",FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.MADH, "Tên đại hội", new { @class = "control-label col-lg-2" })
