                @Html.DropDownList("MANGDIBAU", String.Empty)
                @Html.ValidationMessageFor(model => model.MANGDIBAU)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.CT_DHCD.SLCPSAUCUNG,"Số lượng cổ phiếu có thể bầu", new { @class = "control-label col-lg-2" })
