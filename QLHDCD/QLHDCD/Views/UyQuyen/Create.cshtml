@model QLHDCD.Models.UYQUYEN

@{
    ViewBag.Title = "Tạo ủy quyền";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tạo ủy quyền</h2>


@using (Html.BeginForm("Insert","UyQuyen",FormMethod.Post)) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.MADH, "MADH", new { @class = "control-label col-lg-2" })
            <div class="col-lg-10">
                @Html.DropDownList("MADH", String.Empty)
                @Html.ValidationMessageFor(model => model.MADH)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MANGCHUYEN, "MANGCHUYEN", new { @class = "control-label col-lg-2" })
            <div class="col-lg-10">
                @Html.DropDownList("MANGCHUYEN", String.Empty)
                @Html.ValidationMessageFor(model => model.MANGCHUYEN)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MANGNHAN, "MANGNHAN", new { @class = "control-label col-lg-2" })
            <div class="col-lg-10">
                @Html.DropDownList("MANGNHAN", String.Empty)
                @Html.ValidationMessageFor(model => model.MANGNHAN)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SLUQ, new { @class = "control-label col-lg-2" })
            <div class="col-lg-10">
                @Html.EditorFor(model => model.SLUQ)
                @Html.ValidationMessageFor(model => model.SLUQ)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.THOIGIAN, new { @class = "control-label col-lg-2" })
            <div class="col-lg-10">
                @Html.EditorFor(model => model.THOIGIAN)
                @Html.ValidationMessageFor(model => model.THOIGIAN)
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2" style="text-align:center;">
                <button type="reset" class="btn btn-default">Hủy</button>
                <button type="submit" class="btn btn-primary">Xác nhận</button>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở lại danh sách", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
