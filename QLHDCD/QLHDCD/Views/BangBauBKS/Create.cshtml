@model QLHDCD.Models.BANGBAUBK

@{
    ViewBag.Title = "Tạo ứng cử hoặc đề cử vào BKS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tạo ứng cử hoặc đề cử vào BKS</h2>
@{
    if (ViewBag.check != null)
    {
        if (ViewBag.check == 1)
        {
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title">Thông báo</h3>
                </div>
                <div class="panel-body">
                    @ViewBag.checkString
                </div>
            </div>
        }
        else
        {
            <div class="panel panel-danger">
                <div class="panel-heading">
                    <h3 class="panel-title">Thông báo</h3>
                </div>
                <div class="panel-body">
                    @ViewBag.CheckString
                </div>
            </div>
        }
    }
}
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.MADH, "Tên đại hội", new { @class = "control-label col-lg-2" })
            <div class="col-lg-10">
                @Html.DropDownList("MADH", String.Empty)
                @Html.ValidationMessageFor(model => model.MADH)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MACD, "Tên cổ đông", new { @class = "control-label col-lg-2" })
            <div class="col-lg-10">
                @Html.DropDownList("MACD", String.Empty)
                @Html.ValidationMessageFor(model => model.MACD)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HINHTHUCBAU, new { @class = "control-label col-lg-2" })
            <div class="col-lg-10">
                @Html.EditorFor(model => model.HINHTHUCBAU)
                @Html.ValidationMessageFor(model => model.HINHTHUCBAU)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SLPHIEUBAU, new { @class = "control-label col-lg-2" })
            <div class="col-lg-10">
                @Html.TextBoxFor(model => model.SLPHIEUBAU,new { @readonly = "readonly"})
                @Html.ValidationMessageFor(model => model.SLPHIEUBAU)
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

